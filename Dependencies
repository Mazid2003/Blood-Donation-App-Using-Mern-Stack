│
│── server/  # Node.js Backend
│   ├── package.json
│   ├── node_modules/
📌 Frontend (React.js) - package.json
json
Copy
Edit
{
  "name": "blood-donation-client",
  "version": "1.0.0",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.7.0",
    "axios": "^1.3.0",
    "redux": "^4.2.0",
    "react-redux": "^8.0.5",
    "tailwindcss": "^3.2.4",
    "bootstrap": "^5.2.3"
  },
  "devDependencies": {
    "vite": "^4.0.0"
  }
}
